<Window x:Class="MySocialMedia.Client.SendMsgToNewContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySocialMedia.Client"
        mc:Ignorable="d"
        Title="SendMsgToNewContact" Height="720" Width="457"
        WindowStartupLocation="CenterScreen" Background="{x:Null}" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"
        MouseDown="SendNewMsgWin_MouseDown">
    <Window.Resources>
        <!-- Color Resources -->
        <Color x:Key="MainBackgroundColor">#FF8DECB4</Color>
        <Color x:Key="LightColor">#FFFFF5E0</Color>
        <Color x:Key="DarkColor">#FF141E46</Color>

        <!-- Brush Resources -->
        <SolidColorBrush x:Key="MainBackgroundBrush" Color="{StaticResource MainBackgroundColor}"/>
        <SolidColorBrush x:Key="LightBrush" Color="{StaticResource LightColor}"/>
        <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource DarkColor}"/>

        <Style TargetType="TextBox" x:Key="RoundedTextBoxStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="0,76,0,192">
        <Rectangle HorizontalAlignment="Center" Height="448" Stroke="Black" VerticalAlignment="Center" Width="450" Fill="{StaticResource MainBackgroundBrush}" RadiusX="10.167" RadiusY="10.167"/>

        <Grid x:Name="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" Height="426" Width="372">
            <TextBlock x:Name="Welcome_Back_" HorizontalAlignment="Center" Height="57" TextWrapping="Wrap" Text="Send Message" VerticalAlignment="Top" Width="270" FontWeight="Bold" FontSize="40" FontFamily="Barlow Condensed ExtraBold" Foreground="{StaticResource DarkBrush}" Margin="0,59,0,0"/>
            <Grid x:Name="ToGrid" HorizontalAlignment="Left" Height="75" Margin="36,146,0,0" VerticalAlignment="Top">
                <TextBlock x:Name="ToTextBlock" HorizontalAlignment="Left" Height="18" Margin="0,-2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="14" Foreground="{StaticResource DarkBrush}"><Run FlowDirection="RightToLeft" Language="he-il" Text="To"/></TextBlock>
                <TextBox x:Name="ToInput" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Center" TextWrapping="Wrap" Width="300" VerticalContentAlignment="Center" FontSize="28" Background="{x:Null}" BorderBrush="{StaticResource DarkBrush}" Margin="0,21,0,0" TextChanged="EnterTo_TextChanged"/>
            </Grid>

            <Grid x:Name="Message" HorizontalAlignment="Left" Height="131" Margin="36,221,0,0" VerticalAlignment="Top">
                <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Left" Height="18" Margin="0,19,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Width="50" Foreground="{StaticResource DarkBrush}" RenderTransformOrigin="1.74,-0.083"/>
                <TextBox x:Name="MessageInput" Style="{StaticResource RoundedTextBoxStyle}" HorizontalAlignment="Center" Height="79" Margin="0,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" VerticalContentAlignment="Center" FontSize="28" BorderBrush="{StaticResource DarkBrush}" Background="{x:Null}" TextChanged="EnterMessage_TextChanged"/>
            </Grid>

            <Button x:Name="Send" Content="Send" HorizontalAlignment="Center" Height="43" Margin="0,366,0,0" VerticalAlignment="Top" Width="300" FontWeight="Bold" FontSize="18" FontFamily="Barlow Condensed ExtraBold" Click="Send_Click">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="{StaticResource DarkBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource LightBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LightBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock x:Name="ErrorMessageSend" Visibility="Hidden" HorizontalAlignment="Left" Height="16" Margin="107,336,0,0" TextWrapping="Wrap" Text="Error Username or Password !" VerticalAlignment="Top" Width="158" Foreground="{DynamicResource DarkBrush}"/>
        </Grid>
        <Button x:Name="CloseButton" Content="x" HorizontalAlignment="Left" Margin="430,0,0,0" VerticalAlignment="Top" FontSize="30" Padding="0,0,0,0" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="-0.571,0.6" FontFamily="Barlow Condensed ExtraBold" Click="Close_Click" Width="17">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="{x:Null}"/>
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                    <Setter Property="Foreground" Value="{StaticResource LightBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{x:Null}"/>
                            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
                            <Setter Property="BorderBrush" Value="{x:Null}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
